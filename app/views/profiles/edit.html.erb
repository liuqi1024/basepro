<%= simple_form_for(@profile, html: {method: :put}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nickname %>
    <%= f.input :weibo %>
    <%= f.input :qq %>
    <%= f.input :intro %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
