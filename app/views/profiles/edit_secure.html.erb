<% content_for :header do -%>
	<%= render 'header' %>
<% end -%>

<%= simple_form_for(@user, url: update_secure_profiles_path, html: { method: :put, class: 'form-horizontal' }, 
										defaults: { input_html: { class: 'input-xlarge' } }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email %>
    <%= f.input :name %>
		<%#= f.input :password %>
		<%#= f.input :password_confirmation %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
