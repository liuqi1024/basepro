<h2>Sign in</h2>
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :login, :required => true, :autofocus => true, input_html: { class: "input-xlarge"} %>
    <%= f.input :password, :required => true, input_html: { class: "input-xlarge"} %>
    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign in", class: "btn btn-primary" %>
		<div style="margin:10px;">
			使用其他账号登录: 
			<%= link_to image_tag("icon/twitter.png"), omniauth_authorize_path(resource_name, "twitter") %>
		</div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
