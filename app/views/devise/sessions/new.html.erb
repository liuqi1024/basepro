<h2>Sign in</h2>
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, :required => true, :autofocus => true, input_html: { class: "input-xlarge"} %>
    <%= f.input :password, :required => true, input_html: { class: "input-xlarge"} %>
    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign in", class: "btn btn-primary" %>
		<%= link_to "login in by sina" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
