<h2>Sign in</h2>
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :login, :required => true, :autofocus => true, input_html: { class: "input-xlarge"} %>
    <%= f.input :password, :required => true, input_html: { class: "input-xlarge"} %>
    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign in", class: "btn btn-primary" %>
		<div style="margin-top:10px;">
			<% if devise_mapping.omniauthable? %>
				或使用其他账号登录: 
				<% resource_class.omniauth_providers.each do |provider| %>
					<%= link_to image_tag("icon/#{provider}.png"), omniauth_authorize_path(resource_name, provider) %>
				<% end %>
			<% end %>
		</div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
